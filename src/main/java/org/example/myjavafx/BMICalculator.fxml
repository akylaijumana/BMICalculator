<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="167.0" prefWidth="316.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.myjavafx.BMICalculatorController">
    <Label text="Weight (kg):" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="20" />
    <TextField fx:id="weightField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="20" />

    <Label text="Height (m):" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="60" />
    <TextField fx:id="heightField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="60" />

    <Button fx:id="calculateButton" text="Calculate BMI" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="100" />
    <Label fx:id="resultLabel" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="140" />
   <ColorPicker fx:id="myColorPicker" editable="true" layoutX="108.0" layoutY="113.0" onAction="#changeColor" />
</AnchorPane>
